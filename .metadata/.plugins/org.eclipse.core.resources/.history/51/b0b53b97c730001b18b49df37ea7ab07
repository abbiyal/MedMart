	@RequestMapping(value="/carts/{customerId}/items",method=RequestMethod.POST,
					consumes=MediaType.APPLICATION_JSON_VALUE)
	public String addItemCart(@PathVariable("customerId") String userId,
			@RequestBody Item item)
	{
		System.out.println(item);
		itemService.addItem(item);
		List<Cart> cart=cartService.getCartById(userId);
		System.out.println(cart);
		if(cart==null)
		{
			System.out.println("hello");
			Cart cart1=new Cart(userId,item,"1a","NEW",0);
			cartService.createNewCart(cart1);
		}
		else
		{
			Cart cart1=new Cart(userId,item,cart.get(0).getSessionId(),cart.get(0).getStatus(),0);
			System.out.println(cart1);
			cartService.createNewCart(cart1);
		}
		return "success added item";
	}
	
	
