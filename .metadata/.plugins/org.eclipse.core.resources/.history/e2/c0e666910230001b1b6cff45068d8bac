package medcart.services;

import java.util.ArrayList;
import java.util.List;

import org.springframework.stereotype.Service;
import org.springframework.web.client.RestTemplate;

import medcart.models.Cart;
import medcart.models.Item;

@Service
public class CartService {
	
//	private RestTemplate restTemplate=new RestTemplate();
	
	public Cart getCartById(String customerById)
	{
		List<Item> items=new ArrayList<>();
		Item item=new Item("1",24,25.90);
		items.add(item);
		Cart cart1=new Cart("1","1s",items);
		return cart1;	
	}
	
	public String addCartItem(Cart cart,Item item)
	{
		cart.getItems().add(item);
		return "success";
	}
	
	public Cart updateCart(Cart cart,Item item)
	{
		String id=item.getId();
		cart.getItems().stream().filter(p->p.getId().equals(id)).forEach(p->p=item);
		return cart;
	}

}
